<UserControl x:Class="WpfApp.controls.UCPlayerIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.controls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="75">
    <Grid MinHeight="50" MinWidth="50" MouseDown="OpenPlayerStats">
        <Ellipse MinHeight="50" MinWidth="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="15 0 15 5">
            <Ellipse.Fill>
                <ImageBrush x:Name="playerPicture"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse>
            
        </Ellipse>
        <Label FontSize="15" Foreground="White" Name="shirtNumber" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Border CornerRadius="90">
                
            </Border>
        </Label>
    </Grid>
</UserControl>
